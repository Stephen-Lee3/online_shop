<h1 align="center">商品管理</h1>
<div class="col-md-10 col-md-offset-1">
<div class="normal_border">
<table class="table table-hover">
<tr>
<td><b>id</b></td>
<td><b>商品名</b></td>
<td><b>零售价</b></td>
<td><b>库存</b></td>
</tr>	
<% @products.each do |product|%>
<tr>
<td><%= link_to product.id, edit_admin_product_path(product)%></td>
<td><%= link_to product.name, edit_admin_product_path(product)%></td>
<td><%= product.price%></td>
<td><%= product.inventory%></td>
</tr>
<%end%>
</table>
<%= will_paginate @products %>
</div>
</div>
