<div class="col-md-4 col-md-offset-4">
	<div class="normal_border">
<%= form_tag search_path, method: :get do %>
<div>关键字:</div>
<%= text_field_tag :query, params[:query], class: "form-control ", placeholder: "搜索商品名称"%>
<div>价格区间：</div>
<div class="col-md-6">
<%= text_field_tag :min_price, params[:min_price], class: "form-control "%></div>

<div class="col-md-6">
<%= text_field_tag :max_price, params[:max_price], class: "form-control "%></div>
<%= submit_tag '搜索', class: "btn btn-lg btn-success"%>
<%end%>
</div>
</div>