<% @comments.each do |comment|%>
<div class="item">
<div class="col-md-2">
 <div><%= image_tag(comment.user.check_avatar,size: "60x60",class: "img-circle")%></div>
  <div><%= comment.user.nick_name%></div>
</div>
<div class="col-md-8">
 <div class="time_style"><%= time_ago_in_words(comment.created_at)%>前</div><br>	
 <%= comment.content%>
 </div>
</div><br>
<%end%>
