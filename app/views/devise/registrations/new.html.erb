<div class="col-md-4 col-md-offset-4">
<h2>注册</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nick_name, autofocus: true, label: "昵称"%>
    <%= f.input :email, required: true, label: "邮箱地址"%>
    <%= f.input :password, label: "密码", required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, label: "再次输入密码", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "注册" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
