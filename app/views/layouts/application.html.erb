<!DOCTYPE html>
<html>
<head>
  <title>Shop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header'%>
<div class="container-fluid">
<div class="row">
<div class="col-md-4">
<%= link_to image_tag("logo.png", id: "logo"), root_path %>
</div>
<div class="col-md-8">
<div class="form-inline search_form">
<%= form_tag search_path, method: :get do %>
<%= text_field_tag :query, params[:query], class: "form-control ",size: "50x40", placeholder: "搜索商品名称"%>
<%= submit_tag '搜索', class: "btn btn-lg btn-success"%>
<%end%>
</div>
</div>
</div>
</div>



<%= render 'layouts/navigator'%>
<div class="container-fluid">
 <div class="row">
 	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<div class="col-md-10">
   <%= yield %> 
 </div>
 </div>
</div>
<%= render 'layouts/footer'%>

</body>
</html>
